{
	"name": "node-rest-server",
	"version": "3.1.0",
	"description": "Configurable node rest server",
	"main": "lib/index.js",
	"module": "lib/index.esm.js",
	"scripts": {
		"start": "run-p dev:*",
		"local": "",
		"build": "rollup --config scripts/rollup/rollup.config.js",
		"dev:watch": "watch 'NODE_ENV='development' && npm run build' src dev",
		"dev:server": "nodemon --inspect --watch lib dev/server.js",
		"lint": "eslint src/**/* dev/**/* examples/index.js",
		"lint:fix": "npm run lint --fix",
		"format": "prettier src/**/* examples/index.js --check",
		"format:fix": "prettier src/**/* examples/index.js --write",
		"pre:commit": "lint-staged",
		"prepare": "husky install"
	},
	"lint-staged": {
		"src/**/*": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:nishant-labs/node-rest-server.git"
	},
	"files": [
		"lib"
	],
	"keywords": [
		"node rest",
		"rest-server",
		"express rest wrapper",
		"configuration only rest server"
	],
	"author": "Nishant Kumar Sinha",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nishant-labs/node-rest-server/issues"
	},
	"homepage": "https://github.com/nishant-labs/node-rest-server#readme",
	"dependencies": {
		"chalk": "4.1.2",
		"cors": "2.8.5",
		"date-fns": "2.26.0",
		"errorhandler": "1.5.1",
		"express": "4.17.1",
		"fastest-validator": "1.12.0"
	},
	"devDependencies": {
		"@babel/core": "7.16.0",
		"@babel/eslint-parser": "7.16.3",
		"@babel/plugin-proposal-numeric-separator": "7.16.0",
		"@babel/plugin-proposal-object-rest-spread": "7.16.0",
		"@babel/plugin-transform-classes": "7.16.0",
		"@babel/plugin-transform-template-literals": "7.16.0",
		"@babel/preset-env": "7.16.4",
		"@babel/register": "7.16.0",
		"@rollup/plugin-babel": "5.3.0",
		"@rollup/plugin-node-resolve": "13.0.6",
		"eslint": "8.4.0",
		"husky": "7.0.4",
		"lint-staged": "12.1.2",
		"nodemon": "2.0.15",
		"npm-run-all": "4.1.5",
		"prettier": "2.5.1",
		"rollup": "2.60.2",
		"watch": "1.0.2"
	}
}
