{
	"name": "node-rest-server",
	"version": "3.2.0",
	"description": "Configurable node rest server",
	"exports": {
		".": "./lib/index.js",
		"./lib": "./lib/index.js",
		"./esm": "./lib/esm/index.js",
		"./lib/esm": "./lib/esm/index.js"
	},
	"type": "module",
	"scripts": {
		"start": "run-p dev:*",
		"local": "",
		"build": "rollup --config scripts/rollup/rollup.config.mjs",
		"dev:watch": "npm run build -- --watch",
		"dev:server": "node --trace-warnings --watch dev/server.mjs",
		"lint": "eslint src/**/* dev/**/* examples/index.js",
		"lint:fix": "npm run lint --fix",
		"format": "prettier src/**/* examples/index.js --check",
		"format:fix": "prettier src/**/* examples/index.js --write",
		"pre:commit": "lint-staged",
		"prepare": "husky install && npm --prefix ./examples install"
	},
	"lint-staged": {
		"src/**/*": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:nishant-labs/node-rest-server.git"
	},
	"files": [
		"lib"
	],
	"keywords": [
		"node rest",
		"rest-server",
		"express rest wrapper",
		"configuration only rest server"
	],
	"author": "Nishant Kumar Sinha",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nishant-labs/node-rest-server/issues"
	},
	"homepage": "https://github.com/nishant-labs/node-rest-server#readme",
	"dependencies": {
		"chalk": "5.2.0",
		"cors": "2.8.5",
		"date-fns": "2.29.3",
		"errorhandler": "1.5.1",
		"express": "4.18.2",
		"fastest-validator": "1.16.0"
	},
	"devDependencies": {
		"@babel/core": "7.21.0",
		"@babel/eslint-parser": "7.19.1",
		"@babel/plugin-proposal-numeric-separator": "7.18.6",
		"@babel/plugin-proposal-object-rest-spread": "7.20.7",
		"@babel/plugin-transform-classes": "7.21.0",
		"@babel/plugin-transform-template-literals": "7.18.9",
		"@babel/preset-env": "7.20.2",
		"@babel/register": "7.21.0",
		"@rollup/plugin-babel": "6.0.3",
		"@rollup/plugin-node-resolve": "15.0.1",
		"eslint": "8.35.0",
		"husky": "8.0.3",
		"lint-staged": "13.1.2",
		"nodemon": "2.0.21",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.4",
		"rollup": "3.18.0"
	}
}
