{
	"name": "node-rest-server",
	"version": "4.0.0-0",
	"description": "Configurable node rest server",
	"exports": {
		".": "./lib/index.js",
		"./lib": "./lib/index.js"
	},
	"types": "./lib/index.d.ts",
	"type": "module",
	"scripts": {
		"start": "run-p dev:*",
		"local": "",
		"build": "rollup --config scripts/rollup/rollup.config.ts --configPlugin typescript",
		"dev:watch": "npm run build -- --watch",
		"dev:server": "node --loader ts-node/esm dev/index.ts",
		"lint": "eslint src/**/* dev/**/* examples/index.ts",
		"lint:fix": "npm run lint -- --fix",
		"format": "prettier src/**/* dev/**/* examples/index.ts --check",
		"format:fix": "prettier src/**/* dev/**/* examples/index.ts --write",
		"pre:commit": "lint-staged",
		"prepare": "husky install && npm --prefix ./examples install"
	},
	"lint-staged": {
		"src/**/*": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:nishant-labs/node-rest-server.git"
	},
	"files": [
		"lib"
	],
	"keywords": [
		"node rest",
		"rest-server",
		"express rest wrapper",
		"configuration only rest server"
	],
	"author": "Nishant Kumar Sinha",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nishant-labs/node-rest-server/issues"
	},
	"homepage": "https://github.com/nishant-labs/node-rest-server#readme",
	"dependencies": {
		"chalk": "5.3.0",
		"cors": "2.8.5",
		"date-fns": "2.30.0",
		"errorhandler": "1.5.1",
		"express": "4.18.2",
		"fastest-validator": "1.17.0"
	},
	"devDependencies": {
		"@babel/core": "7.22.10",
		"@babel/eslint-parser": "7.22.10",
		"@babel/preset-typescript": "7.22.5",
		"@rollup/plugin-babel": "6.0.3",
		"@rollup/plugin-node-resolve": "15.2.0",
		"@rollup/plugin-typescript": "11.1.2",
		"@types/cors": "2.8.13",
		"@types/errorhandler": "1.5.0",
		"@types/express": "4.17.17",
		"@types/node": "20.5.1",
		"@typescript-eslint/eslint-plugin": "6.4.0",
		"@typescript-eslint/parser": "6.4.0",
		"eslint": "8.47.0",
		"husky": "8.0.3",
		"lint-staged": "14.0.0",
		"npm-run-all": "4.1.5",
		"prettier": "3.0.2",
		"rollup": "3.28.0",
		"rollup-plugin-dts": "6.0.0",
		"ts-node": "10.9.1",
		"typescript": "5.1.6"
	}
}
